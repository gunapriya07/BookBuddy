<% content_for :title, "Editing Review" %>

<div class="container mt-5" style="max-width: 600px;">
  <div class="card shadow-sm border-0">
    <div class="card-header bg-warning text-white text-center">
      <h2 class="mb-0">✏️ Edit Review</h2>
    </div>
    <div class="card-body">
      <%= render "form", review: @review %>
    </div>
    <div class="card-footer d-flex justify-content-between">
      <%= link_to " Show Review", book_review_path(@book, @review), class: "btn btn-outline-primary" %>
      <%= link_to "Back to Reviews", book_reviews_path(@book), class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
