<h3>Reviews</h3>
<%= render @book.reviews %>

<h4>Add a Review</h4>
<%= form_with(model: [@book, @book.reviews.build]) do |f| %>
  <div>
    <%= f.label :rating %>
    <%= f.number_field :rating %>
  </div>

  <div>
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </div>

  <div>
    <%= f.submit "Submit Review" %>
  </div>
<% end %>
