<!-- Reviews Section -->
<h3 class="mt-5 text-primary fw-bold">📚 Reviews</h3>
<div class="mt-4">
  <% if @book.reviews.any? %>
    <div class="row row-cols-1 g-3">
      <%= render @book.reviews %>
    </div>
  <% else %>
    <p class="text-muted fst-italic">No reviews yet. Be the first to review this book!</p>
  <% end %>
</div>

<!-- Add Review Section -->
<h4 class="mt-5 text-primary fw-bold">✍️ Add a Review</h4>
<div class="card shadow-sm mt-3">
  <div class="card-body">
    <%= form_with(model: [@book, @book.reviews.build], local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :rating, "Rating (1 to 5)", class: "form-label" %>
        <%= f.number_field :rating, class: "form-control", min: 1, max: 5, placeholder: "Enter rating" %>
      </div>

      <div class="mb-3">
        <%= f.label :comment, "Your Review", class: "form-label" %>
        <%= f.text_area :comment, class: "form-control", rows: 4, placeholder: "Write your thoughts here..." %>
      </div>

      <%= f.submit "Submit Review", class: "btn btn-success w-100" %>
    <% end %>
  </div>
</div>
