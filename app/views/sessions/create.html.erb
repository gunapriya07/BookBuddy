<!-- app/views/sessions/new.html.erb -->
<h1>Login</h1>

<%= form_with url: login_path, method: :post, local: true do |f| %>
  <div>
    <%= label_tag :email %><br>
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Log In" %>
<% end %>
