<h1>Log In</h1>

<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>

<%= form_with url: login_path, local: true do |f| %>
  <div>
    <%= label_tag :email %><br>
    <%= email_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Log In" %>
<% end %>

<%= link_to "Sign Up", new_user_path %>
