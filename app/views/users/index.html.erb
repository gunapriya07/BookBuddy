<% content_for :title, "Users" %>

<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success text-center"><%= notice %></div>
  <% end %>

  <h1 class="mb-4 text-primary">📋 Users</h1>

  <div class="row row-cols-1 row-cols-md-2 g-4" id="users">
    <% @users.each do |user| %>
      <div class="col">
        <div class="card shadow-sm p-3 h-100">
          <%= render user %>
          <div class="mt-3">
            <%= link_to "👁 Show this user", user, class: "btn btn-outline-info btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "➕ New User", new_user_path, class: "btn btn-success" %>
  </div>
</div>
