<div class="container mt-5" style="max-width: 600px;">
  <div class="card shadow-sm p-4">
    <h1 class="text-success mb-3">👋 Welcome, <%= @user.name %>!</h1>

    <p><strong>Email:</strong> <%= @user.email %></p>

    <div class="mt-4">
      <%= link_to "✏️ Edit Profile", edit_user_path(@user), class: "btn btn-outline-primary me-2" %>
      <%= link_to "🚪 Log Out", logout_path, method: :delete, data: { confirm: "Are you sure you want to log out?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
