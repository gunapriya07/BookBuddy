<% content_for :title, "Edit Profile" %>

<div class="container mt-5" style="max-width: 600px;">
  <h1 class="text-center text-primary mb-4">✏️ Edit Profile</h1>

  <%= form_with model: @user, local: true, class: "card p-4 shadow-sm" do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
    </div>

    <div class="d-grid">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <%= link_to "← Back to Profile", user_path(@user), class: "btn btn-link" %>
  </div>
</div>
