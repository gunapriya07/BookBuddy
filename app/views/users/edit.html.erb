<h1>Edit Profile</h1>

<%= form_with model: @user, local: true do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <%= f.submit "Update" %>
<% end %>

<%= link_to "Back to Profile", user_path(@user) %>
