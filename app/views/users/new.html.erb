<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Create Your Account</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .signup-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .signup-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            overflow: hidden;
            max-width: 500px;
            width: 100%;
        }
        
        .signup-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px 30px 30px;
            text-align: center;
        }
        
        .signup-header h1 {
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 10px;
        }
        
        .signup-header p {
            opacity: 0.9;
            margin-bottom: 0;
        }
        
        .signup-form {
            padding: 40px 30px;
        }
        
        .form-floating {
            margin-bottom: 20px;
        }
        
        .form-floating > .form-control {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding-left: 45px;
            height: 58px;
            transition: all 0.3s ease;
        }
        
        .form-floating > .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        
        .form-floating > label {
            padding-left: 45px;
            color: #6c757d;
        }
        
        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            z-index: 4;
        }
        
        .btn-signup {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            padding: 15px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .btn-signup:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
        }
        
        .divider {
            text-align: center;
            margin: 30px 0;
            position: relative;
        }
        
        .divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background: #e9ecef;
        }
        
        .divider span {
            background: white;
            padding: 0 20px;
            color: #6c757d;
            font-size: 0.9rem;
        }
        
        .login-link {
            text-align: center;
            padding: 20px 30px 30px;
            background: #f8f9fa;
        }
        
        .btn-outline-custom {
            border: 2px solid #667eea;
            color: #667eea;
            border-radius: 12px;
            padding: 10px 30px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .btn-outline-custom:hover {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
        }
        
        .password-strength {
            margin-top: 5px;
            font-size: 0.85rem;
        }
        
        .strength-bar {
            height: 4px;
            border-radius: 2px;
            background: #e9ecef;
            margin-top: 5px;
            overflow: hidden;
        }
        
        .strength-fill {
            height: 100%;
            transition: all 0.3s ease;
            border-radius: 2px;
        }
        
        .error-message {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
            display: none;
        }
        
        .form-floating.has-error .form-control {
            border-color: #dc3545;
        }
        
        .form-floating.has-success .form-control {
            border-color: #28a745;
        }
        
        .social-signup {
            margin-bottom: 20px;
        }
        
        .btn-social {
            border: 2px solid #e9ecef;
            color: #6c757d;
            border-radius: 12px;
            padding: 12px;
            margin: 0 5px;
            transition: all 0.3s ease;
        }
        
        .btn-social:hover {
            border-color: #667eea;
            color: #667eea;
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <div class="signup-container">
        <div class="signup-card">
            <!-- Header -->
            <div class="signup-header">
                <div class="mb-3">
                    <i class="fas fa-user-plus fa-3x"></i>
                </div>
                <h1>Create Account</h1>
                <p>Join us today and get started</p>
            </div>

            <!-- Form -->
            <div class="signup-form">
                <!-- Social Sign Up Options -->
                <div class="social-signup text-center">
                    <p class="text-muted mb-3">Sign up with</p>
                    <button class="btn btn-social me-2">
                        <i class="fab fa-google"></i>
                    </button>
                    <button class="btn btn-social me-2">
                        <i class="fab fa-facebook-f"></i>
                    </button>
                    <button class="btn btn-social">
                        <i class="fab fa-twitter"></i>
                    </button>
                </div>

                <div class="divider">
                    <span>or sign up with email</span>
                </div>

                <%= form_with model: @user, local: true, html: { class: "needs-validation", novalidate: true } do |f| %>
                    <!-- Name Field -->
                    <div class="form-floating position-relative">
                        <i class="fas fa-user input-icon"></i>
                        <%= f.text_field :name, 
                            class: "form-control", 
                            id: "floatingName",
                            placeholder: "Full Name",
                            required: true %>
                        <%= f.label :name, "Full Name", for: "floatingName" %>
                        <div class="error-message" id="nameError">
                            Please enter your full name.
                        </div>
                    </div>

                    <!-- Email Field -->
                    <div class="form-floating position-relative">
                        <i class="fas fa-envelope input-icon"></i>
                        <%= f.email_field :email, 
                            class: "form-control", 
                            id: "floatingEmail",
                            placeholder: "Email Address",
                            required: true %>
                        <%= f.label :email, "Email Address", for: "floatingEmail" %>
                        <div class="error-message" id="emailError">
                            Please enter a valid email address.
                        </div>
                    </div>

                    <!-- Password Field -->
                    <div class="form-floating position-relative">
                        <i class="fas fa-lock input-icon"></i>
                        <%= f.password_field :password, 
                            class: "form-control", 
                            id: "floatingPassword",
                            placeholder: "Password",
                            required: true %>
                        <%= f.label :password, "Password", for: "floatingPassword" %>
                        <div class="password-strength">
                            <div class="strength-bar">
                                <div class="strength-fill" id="strengthFill"></div>
                            </div>
                            <small class="text-muted" id="strengthText">Enter a strong password</small>
                        </div>
                        <div class="error-message" id="passwordError">
                            Password must be at least 8 characters long.
                        </div>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="form-floating position-relative">
                        <i class="fas fa-lock input-icon"></i>
                        <%= f.password_field :password_confirmation, 
                            class: "form-control", 
                            id: "floatingPasswordConfirm",
                            placeholder: "Confirm Password",
                            required: true %>
                        <%= f.label :password_confirmation, "Confirm Password", for: "floatingPasswordConfirm" %>
                        <div class="error-message" id="confirmError">
                            Passwords do not match.
                        </div>
                    </div>

                    <!-- Terms and Conditions -->
                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                        <label class="form-check-label text-muted" for="agreeTerms">
                            I agree to the <a href="#" class="text-decoration-none">Terms of Service</a> and 
                            <a href="#" class="text-decoration-none">Privacy Policy</a>
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid">
                        <%= f.submit "Create Account", class: "btn btn-signup text-white" %>
                    </div>
                <% end %>

                <!-- Error Messages Display -->
                <% if @user&.errors&.any? %>
                <div class="alert alert-danger mt-3" role="alert">
                    <h6><i class="fas fa-exclamation-triangle me-2"></i>Please fix the following errors:</h6>
                    <ul class="mb-0">
                        <% @user.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>
            </div>

            <!-- Login Link -->
            <div class="login-link">
                <p class="text-muted mb-3">Already have an account?</p>
                <%= link_to login_path, class: "btn btn-outline-custom" do %>
                    <i class="fas fa-sign-in-alt me-2"></i>Sign In Instead
                <% end %>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Form validation and enhancements
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('.needs-validation');
            const nameField = document.getElementById('floatingName');
            const emailField = document.getElementById('floatingEmail');
            const passwordField = document.getElementById('floatingPassword');
            const confirmField = document.getElementById('floatingPasswordConfirm');
            const agreeTerms = document.getElementById('agreeTerms');

            // Password strength checker
            function checkPasswordStrength(password) {
                let strength = 0;
                if (password.length >= 8) strength++;
                if (password.match(/[a-z]/)) strength++;
                if (password.match(/[A-Z]/)) strength++;
                if (password.match(/[0-9]/)) strength++;
                if (password.match(/[^a-zA-Z0-9]/)) strength++;
                return strength;
            }

            passwordField.addEventListener('input', function() {
                const password = this.value;
                const strength = checkPasswordStrength(password);
                const strengthFill = document.getElementById('strengthFill');
                const strengthText = document.getElementById('strengthText');

                let width = (strength / 5) * 100;
                let color = '#dc3545';
                let text = 'Weak';

                if (strength >= 3) {
                    color = '#ffc107';
                    text = 'Medium';
                }
                if (strength >= 4) {
                    color = '#28a745';
                    text = 'Strong';
                }
                if (strength === 5) {
                    text = 'Very Strong';
                }

                strengthFill.style.width = width + '%';
                strengthFill.style.backgroundColor = color;
                strengthText.textContent = text;
                strengthText.style.color = color;
            });

            // Real-time validation
            function validateField(field, errorId, validator) {
                const errorElement = document.getElementById(errorId);
                const isValid = validator(field.value);
                
                if (isValid) {
                    field.parentElement.classList.remove('has-error');
                    field.parentElement.classList.add('has-success');
                    errorElement.style.display = 'none';
                } else {
                    field.parentElement.classList.remove('has-success');
                    field.parentElement.classList.add('has-error');
                    errorElement.style.display = 'block';
                }
                
                return isValid;
            }

            nameField.addEventListener('blur', function() {
                validateField(this, 'nameError', (value) => value.length >= 2);
            });

            emailField.addEventListener('blur', function() {
                validateField(this, 'emailError', (value) => /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value));
            });

            passwordField.addEventListener('blur', function() {
                validateField(this, 'passwordError', (value) => value.length >= 8);
            });

            confirmField.addEventListener('blur', function() {
                validateField(this, 'confirmError', (value) => value === passwordField.value);
            });

            // Form submission
            form.addEventListener('submit', function(event) {
                event.preventDefault();
                event.stopPropagation();

                const isNameValid = validateField(nameField, 'nameError', (value) => value.length >= 2);
                const isEmailValid = validateField(emailField, 'emailError', (value) => /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value));
                const isPasswordValid = validateField(passwordField, 'passwordError', (value) => value.length >= 8);
                const isConfirmValid = validateField(confirmField, 'confirmError', (value) => value === passwordField.value);
                const isTermsChecked = agreeTerms.checked;

                if (isNameValid && isEmailValid && isPasswordValid && isConfirmValid && isTermsChecked) {
                    // Submit the form
                    this.submit();
                } else {
                    form.classList.add('was-validated');
                }
            });
        });
    </script>
</body>
</html>