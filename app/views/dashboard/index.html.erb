<div class="container py-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">

      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h2 class="card-title text-primary">Welcome, <%= @user.name %>!</h2>
          <p class="lead">
            <strong>Total Books Added:</strong> <span class="badge bg-info text-dark"><%= @total_books %></span>
          </p>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <h4 class="card-title text-secondary">ðŸ“– Your Recent Reviews</h4>

          <% if @recent_reviews.any? %>
            <% @recent_reviews.each do |review| %>
              <div class="border rounded p-3 mb-3 bg-light">
                <h5><%= review.book.title %></h5>
                <p>
                  <strong>Rating:</strong>
                  <span class="badge bg-success"><%= review.rating %>/5</span><br>
                  <strong>Comment:</strong> <%= review.comment %><br>
                  <small class="text-muted">
                    <em>Reviewed on <%= review.created_at.strftime("%B %d, %Y") %></em>
                  </small>
                </p>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">You havenâ€™t reviewed any books yet.</p>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
